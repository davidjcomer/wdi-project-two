<body>
  <div class="navbar is-transparent">
    <div class="navbar-brand">
      <a class="navbar-item">
        <img src="https://heykawaii.com/image/cache/catalog/Artes%20/marcas/THE-SIMPSONS-LOGO-600x315.jpg" width="112" height="28" alt="Bulma">
      </a>
    </div>
    <div class="navbar-menu is-centered">
      <div class="navbar-item">
        <div class="control has-icons-left">
          <input class="input is-small has-text-centered" type="text" placeholder="Search">
          <span class="icon is-left is-small">
            <i class="material-icons fas fa-search"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="navbar-item is-flex-touch">
      <a class="navbar-item">
        <i class="material-icons fas fa-search"></i>
      </a>
      <a class="navbar-item">
        <i class="material-icons far fa-heart"></i>
      </a>
      <a class="navbar-item">
        <i class="material-icons far fa-user"></i>
      </a>
    </div>
  </div>
  <div class="columns body-columns">
    <div class="column is-half is-offset-one-quarter">
      <% posts.forEach(post => {%>
        <div class="card">
          <div class="header">
            <div class="media">
              <div class="media-left">
                <a href="/posts/<%= post.id %>">
                <figure class="image is-48x48">
                  <img src="https://source.unsplash.com/random/96x96" alt="Placeholder image">
                </figure>
                <h3><%= post.title %></h3>
                </a>
              </div>
              <div class="media-content">
                <p class="title is-4">Homer Simpson</p>
                <p class="subtitle is-6">@homerjsimpson</p>
              </div>
            </div>
          </div>

          <div class="card-image">
            <figure class="image is-4by3">
              <img src="<%= post.image %>" alt="Posted by @SimpsonsUser">
            </figure>
          </div>
          <div class="card-content">
            <div class="level is-mobile">
              <div class="level-left">
                <div class="level-item has-text-centered">
                  <a href="">
                    <i class="material-icons far fa-heart"></i>
                  </a>
                </div>
                <div class="level-item has-text-centered">
                  <div>
                    <a href="">
                      <i class="material-icons far fa-comment"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <div class="content">
              <p>
                <strong>32 Likes</strong>
              </p>
              <%= post.caption %>
              <a>@simpstagramUser</a>.
              <a href="#">#hashtag</a>
              <a href="#">#simpstagram</a>
              <br>
              <time datetime="2018-1-1">11:09 PM - 1 Jan 2018</time>
            </div>
          </div>
          <div class="card-footer">
            <div class="columns is-mobile">
              <div class="column is-11">
                <div class="field">
                  <div class="control">
                    <input class="input is-medium" type="text" placeholder="Add a comment . . .">
                  </div>
                </div>
              </div>
              <div class="column has-text-centered">
                <button class="button">
                </button>
              </div>
            </div>
          </div>
          <% }) %>
        </div>




