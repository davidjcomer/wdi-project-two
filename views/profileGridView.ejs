<div class='columns'>
  <div class='container profile'>
    <div class='section profile-heading'>
      <div class='columns is-mobile is-multiline'>
        <div class='column is-2'>
          <span class='header-icon user-profile-image'>
            <img alt='' src='<%= profilePicture %>'>
          </span>
        </div>
        <div class='column is-4-tablet is-10-mobile name'>
          <p>
            <span class='title is-bold'><%= username %></span>
            <br>
          </p>
          <p class='tagline'>
            <%= bio %>
          </p>
        </div>
        <div class='column is-2-tablet is-4-mobile has-text-centered'>
          <p class='stat-val'>398</p>
          <p class='stat-key'>posts</p>
        </div>
        <div class='column is-2-tablet is-4-mobile has-text-centered'>
          <p class='stat-val'>382</p>
          <p class='stat-key'>followers</p>
        </div>
        <div class='column is-2-tablet is-4-mobile has-text-centered'>
          <p class='stat-val'>999</p>
          <p class='stat-key'>following</p>
        </div>
      </div>
    </div>

    <div class='profile-options is-fullwidth'>
      <div class='tabs is-fullwidth is-medium'>
        <ul>
          <li class='link'>
            <a>
              <span class='icon'>
                <i class='fas fa-th'></i>
              </span>
              <span>Grid View</span>
            </a>
          </li>
          <li class='link is-active'>
            <a>
              <span class='icon'>
                <i class='fa fa-list'></i>
              </span>
              <span>List View</span>
            </a>
          </li>
          <li class='link'>
            <a>
              <span class='icon'>
                <i class='fas fa-tag'></i>
              </span>
              <span>Tagged Photos</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

<!--
    <% comments.forEach(comment => { %>
    <p><strong><%= comment.name %></strong></p>
    <%})%>
-->

    <!-- Posts -->
    <div class='columns is-mobile'>
      <% addedPosts.forEach(post => { %>
        <div class='column is-half-tablet is-offset-one-quarter is-12-mobile'>
          <div class='card'>
            <div class='card-image'>
              <figure class='image is-4by4'>
                <img alt='' src='<%= post.image %>'>
              </figure>
            </div>
          </div>
          <br>
        </div>
        <%})%>


    </div>
  </div>
</div>
